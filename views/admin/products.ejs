<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <style>
        .all{
            text-align: center;
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length> 0) { %>
                    <h1 class="all">All Products</h1>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <div class="card-wrapper">
                                <div class="card">
                                    <div class="image-wrapper container">
                                        <img src="<%= product.imageUrl %>" alt="" class="image" />
                                    </div>
                                    <div class="content-wrapper">
                                        <h2>
                                            <%= product.title %>
                                        </h2>
                                        <h3>$<%= product.price %>
                                        </h3>
                                        <div class="actions">
                                            <a href="/admin/edit-product/<%= product._id %>?edit=true"> <button id="cart" class="button flip green-solid cart" type="submit">Update</button></a>
                                            <form action="/admin/delete-product" method="POST">
                                                <input type="hidden" value="<%= product._id %>" name="productId">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="button black-simple more">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1 class="nothing">No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>