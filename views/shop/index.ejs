<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <style>
        .welcome {
            text-align: center;
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (prods.length> 0) { %>
                    <h1 class="welcome">Welcome Our Store...</h1>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <div class="card-wrapper">
                                <div class="card">
                                    <div class="image-wrapper container">
                                        <img src="<%= product.imageUrl %>" alt="" class="image" />
                                    </div>
                                    <div class="content-wrapper">
                                        <h2>
                                            <%= product.title %>
                                        </h2>
                                        <h3>$<%= product.price %>
                                        </h3>
                                        <div class="actions">
                                            <% if (isAuthenticated) { %>
                                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                                    <% } %>
                                                        <a href="/products/<%= product._id %>"><button
                                                                class="button black-simple more">More
                                                                Details</button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1 class="nothing">No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>